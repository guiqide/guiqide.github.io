---
import { getCollection, render } from "astro:content";
import bcrypt from "bcryptjs";
import CryptoJS from 'crypto-js';
import PasswordProtection from "../../components/PasswordProtection.astro";
import PostLayout from "../../layouts/PostLayout.astro";
import { IdToSlug } from "../../utils/hash";

export async function getStaticPaths() {
  const postEntries = await getCollection("posts");
  return postEntries.map((entry) => ({
    params: { slug: IdToSlug(entry.id) },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { slug } = Astro.params;
const { Content } = await render(entry);
const { body } = entry;

// 处理加密文章
let encryptedData = null;
const password = entry.data.password;
if (entry.data.encrypted && password && body) {
  // 生成密码哈希用于验证
  const passwordHash = bcrypt.hashSync(password, 10);

  // 使用密码加密原始Markdown内容
  // @ts-ignore - TypeScript无法正确推断if条件内password的类型
  const encryptedContent = CryptoJS.AES.encrypt(body, password).toString();

  encryptedData = {
    content: encryptedContent,
    hash: passwordHash
  };
}
---

<PostLayout
  title={entry.data.title}
  subTitle={entry.data.description}
  bannerImage={entry.data.cover}
  published={entry.data.published}
  license={entry.data.licenseName ? { name: entry.data.licenseName, url: entry.data.licenseUrl } : undefined}
  author={entry.data.author}
  sourceLink={entry.data.sourceLink}
>
  <div
    class="hidden"
    data-pagefind-body
    data-pagefind-weight="10"
    data-pagefind-meta="title"
  >
    {entry.data.title}
  </div>
  <div data-pagefind-body>
    {encryptedData ? (
      <!-- 加密文章：显示密码输入框 -->
      <div>
        <PasswordProtection
          encryptedData={encryptedData}
          slug={slug}
          class="mb-6 rounded-xl password-container onload-animation"
        />
        <!-- 加密内容容器，解密后的内容将通过JavaScript动态插入 -->
        <div id={`article-content-${slug}`} class="mb-6 markdown-content onload-animation hidden encrypted-content">
          <!-- 内容将在验证密码后由JavaScript动态插入 -->
        </div>
      </div>
    ) : (
      <!-- 普通文章：正常显示内容 -->
      <Content />
    )}
  </div>
</PostLayout>
